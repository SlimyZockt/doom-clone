    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'doom-clone'",
            "cargo": {
                "args": [
                    "b",
                    "--bin=doom-clone",
                    "--package=doom-clone"
                ],
                "problemMatcher": "clippy",
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "terminal": "external",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'doom-clone'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=doom-clone",
                    "--package=doom-clone"
                ],
                "filter": {
                    "name": "doom-clone",
                    "kind": "bin"
                }
            },
            "env": {
                "RUST_LOG": "debug"
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}